{	
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"link": true,
			"palette": [
				{
					"color": "#ffffff",
					"name": "White",
					"slug": "white"
				},
				{
					"color": "#f4f4f4",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#333333",
					"name": "Text color",
					"slug": "text-color"
				},
				{
					"color": "#082A40",
					"name": "Accent color",
					"slug": "accent-color"
				},
				{
					"color": "#163A59",
					"name": "Sub accent color",
					"slug": "sub-accent-color"
				},
				{
					"color": "#2C5273",
					"name": "Recommended color 01",
					"slug": "recommended-color-01"
				},
				{
					"color": "#7790A6",
					"name": "Recommended color 02",
					"slug": "recommended-color-02"
				},
				{
					"color": "#B8CAD9",
					"name": "Recommended color 03",
					"slug": "recommended-color-03"
				}
			]
		},
		"custom": {
			"default-style": {
				"border": {
					"color": "currentColor",
					"style": "solid",
					"width": "1px"
				}
			},
			"font-primary": "var( --wp--preset--font-family--system-sans-serif )",
			"font-weight": {
				"bold": 700,
				"normal": 400
			},
			"letter-spacing": {
				"body": "0.015em",
				"heading": "0.01em"
			},
			"line-height": {
				"body": 1.7,
				"heading": 1.5
			},
			"spacing": {
				"base": "15px"
			}
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1100px"
		},
		"spacing": {
			"blockGap": true,
			"spacingScale": {
                "operator": "*",
                "increment": 1.5,
                "steps": 7,
                "mediumStep": 1.5,
                "unit": "rem"
            },
            "spacingSizes": [
                {
                    "slug": "40",
                    "size": "1rem",
                    "name": "Small"
                },
                {
                    "slug": "50",
                    "size": "1.5rem",
                    "name": "Medium"
                },
                {
                    "slug": "60",
                    "size": "2rem",
                    "name": "Large"
                }
			]
		},
		"typography": {
			"fluid": true,
			"customFontSize": true,
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/noto_serif/NotoSerif-Regular.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/noto_serif/NotoSerif-Italic.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/noto_serif/NotoSerif-Bold.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/noto_serif/NotoSerif-BoldItalic.ttf"
							]
						}
					],
					"fontFamily": "\"Noto Serif\", sans-serif",
					"name": "Noto Serif",
					"slug": "primary"
				},
				{
					"fontFamily": "\"Helvetica Neue\", \"Helvetica\", \"Hiragino Sans\", \"Hiragino Kaku Gothic ProN\", \"Arial\", \"Yu Gothic\", \"Meiryo\", sans-serif",
					"name": "System Sans Serif",
					"slug": "system-sans-serif"
				},
				{
					"fontFamily": "\"Times New Roman\", \"YuMincho\", \"Hiragino Mincho ProN\", \"Yu Mincho\", \"MS PMincho\", serif",
					"name": "System Serif",
					"slug": "system-serif"
				},
				{
					"fontFamily": "ui-monospace, Menlo, Consolas, Monaco, \"Liberation Mono\", \"Lucida Console\", monospace",
					"name": "System Monospace",
					"slug": "system-monospace"
				}
			],
			"fontSizes": [
				{
					"name": "Tiny",
					"size": "12.0px",
					"fluid": {
                        "min": "10px",
                        "max": "16px"
                    },
					"slug": "tiny"
				},
				{
					"name": "Small",
					"size": "14px",
					"fluid": {
                        "min": "12px",
                        "max": "16px"
                    },
					"slug": "small"
				},
				{
					"name": "Normal",
					"size": "16px",
					"fluid": {
                        "min": "12px",
                        "max": "18px"
                    },
					"slug": "normal"
				},
				{
					"name": "Large",
					"size": "22px",
					"fluid": {
                        "min": "18px",
                        "max": "24px"
                    },
					"slug": "large"
				},
				{
					"name": "Extra large",
					"size": "28.0px",
					"fluid": {
                        "min": "24px",
                        "max": "30px"
                    },
					"slug": "extra-large"
				},
				{
					"name": "Huge",
					"size": "56.0px",
					"fluid": {
                        "min": "48px",
                        "max": "60px"
                    },
					"slug": "huge"
				},
				{
					"name": "Gigantic",
					"size": "86px",
					"fluid": {
                        "min": "78px",
                        "max": "90px"
                    },
					"slug": "gigantic"
				},
				{
					"name": "Heading 1",
					"size": "64px",
					"fluid": {
                        "min": "58px",
                        "max": "70px"
                    },
					"slug": "heading-1"
				},
				{
					"name": "Heading 2",
					"size": "48px",
					"fluid": {
                        "min": "40px",
                        "max": "52px"
                    },
					"slug": "heading-2"
				},
				{
					"name": "Heading 3",
					"size": "40px",
					"fluid": {
                        "min": "32px",
                        "max": "48px"
                    },
					"slug": "heading-3"
				},
				{
					"name": "Heading 4",
					"size": "32px",
					"fluid": {
                        "min": "26px",
                        "max": "38px"
                    },
					"slug": "heading-4"
				},
				{
					"name": "Heading 5",
					"size": "24px",
					"fluid": {
                        "min": "20px",
                        "max": "28px"
                    },
					"slug": "heading-5"
				},
				{
					"name": "Heading 6",
					"size": "16px",
					"fluid": {
                        "min": "14px",
                        "max": "20px"
                    },
					"slug": "heading-6"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"color": "currentColor",
					"radius": "0px",
					"style": "var( --wp--custom--default-style--border--style )",
					"width": "var( --wp--custom--default-style--border--width )"
				},
				"color": {
					"background": "var( --wp--preset--color--accent-color )",
					"text": "var( --wp--preset--color--white )"
				},
				"spacing": {
					"margin": {
						"bottom": "calc( 2 * var( --wp--custom--spacing--base ) )",
						"left": "var( --wp--custom--spacing--base )",
						"right": "var( --wp--custom--spacing--base )",
						"top": "calc( 2 * var( --wp--custom--spacing--base ) )"
					},
					"padding": {
						"bottom": "1em",
						"left": "1.5em",
						"right": "1.5em",
						"top": "1em"
					}
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--small )",
					"fontWeight": "bold",
					"lineHeight": "1.25"
				}
			},
			"core/calendar": {
				"color": {
					"text": "var( --wp--preset--color--accent-color )"
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--small )"
				}
			},
			"core/cover": {
				"color": {
					"text": "var( --wp--preset--color--white )"
				},
				"spacing": {
					"padding": "calc( 2 * var( --wp--custom--spacing--base ) )"
				}
			},
			"core/file": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--small )",
					"fontWeight": "var( --wp--custom--font-weight--bold )",
					"lineHeight": "var( --wp--custom--line-height--heading )"
				}
			},
			"core/paragraph": {
				"spacing": {
					"margin": {
						"bottom": "1em",
						"top": "0px"
					}
				},
				"typography": {
					"lineHeight": "calc( 1em + var( --wp--custom--spacing--base ))"
				}
			},
			"core/post-featured-image": {
				"spacing": {
					"margin": {
						"bottom": "calc( 0 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 0 * var( --wp--custom--spacing--base ) )"
					}
				}
			},
			"core/preformatted": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--small )"
				}
			},
			"core/pullquote": {
				"spacing": {
					"padding": {
						"bottom": "calc( 0 * var( --wp--custom--spacing--base ) )",
						"left": "calc( 0 * var( --wp--custom--spacing--base ) )",
						"right": "calc( 0 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 0 * var( --wp--custom--spacing--base ) )"
					}
				}
			},
			"core/site-tagline": {
				"spacing": {
					"margin": {
						"bottom": "calc( 0 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 0 * var( --wp--custom--spacing--base ) )"
					}
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--normal )"
				}
			},
			"core/site-title": {
				"spacing": {
					"margin": {
						"bottom": "calc( 0 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 0 * var( --wp--custom--spacing--base ) )"
					}
				},
				"typography": {
					"fontWeight": "var( --wp--custom--font-weight--normal )"
				}
			},
			"core/spacer": {
				"spacing": {
					"margin": {
						"bottom": "calc( 0 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 0 * var( --wp--custom--spacing--base ) )"
					}
				}
			},
			"core/table": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--small )",
					"lineHeight": "var( --wp--custom--line-height--body )"
				}
			}
		},
		"color": {
			"background": "var( --wp--preset--color--background )",
			"text": "var( --wp--preset--color--text-color )"
		},
		"elements": {
			"h1": {
				"spacing": {
					"margin": {
						"bottom": "calc( 2 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 1.5 * var( --wp--custom--spacing--base ) )"
					}
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--heading-1 )",
					"fontWeight": "var( --wp--custom--font-weight--bold )",
					"letterSpacing": "var( --wp--custom--letter-spacing--heading )",
					"lineHeight": "var( --wp--custom--line-height--heading )"
				}
			},
			"h2": {
				"spacing": {
					"margin": {
						"bottom": "calc( 2 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 1.5 * var( --wp--custom--spacing--base ) )"
					}
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--heading-2 )",
					"fontWeight": "var( --wp--custom--font-weight--bold )",
					"letterSpacing": "var( --wp--custom--letter-spacing--heading )",
					"lineHeight": "var( --wp--custom--line-height--heading )"
				}
			},
			"h3": {
				"spacing": {
					"margin": {
						"bottom": "calc( 2 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 1.5 * var( --wp--custom--spacing--base ) )"
					}
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--heading-3 )",
					"fontWeight": "var( --wp--custom--font-weight--bold )",
					"letterSpacing": "var( --wp--custom--letter-spacing--heading )",
					"lineHeight": "var( --wp--custom--line-height--heading )"
				}
			},
			"h4": {
				"spacing": {
					"margin": {
						"bottom": "calc( 2 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 1.5 * var( --wp--custom--spacing--base ) )"
					}
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--heading-4 )",
					"fontWeight": "var( --wp--custom--font-weight--bold )",
					"letterSpacing": "var( --wp--custom--letter-spacing--heading )",
					"lineHeight": "var( --wp--custom--line-height--heading )"
				}
			},
			"h5": {
				"spacing": {
					"margin": {
						"bottom": "calc( 2 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 1.5 * var( --wp--custom--spacing--base ) )"
					}
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--heading-5 )",
					"fontWeight": "var( --wp--custom--font-weight--bold )",
					"letterSpacing": "var( --wp--custom--letter-spacing--heading )",
					"lineHeight": "var( --wp--custom--line-height--heading )"
				}
			},
			"h6": {
				"spacing": {
					"margin": {
						"bottom": "calc( 2 * var( --wp--custom--spacing--base ) )",
						"top": "calc( 1.5 * var( --wp--custom--spacing--base ) )"
					}
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--heading-6 )",
					"fontWeight": "var( --wp--custom--font-weight--bold )",
					"letterSpacing": "var( --wp--custom--letter-spacing--heading )",
					"lineHeight": "var( --wp--custom--line-height--heading )"
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|recommended-color-01"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--primary)",
			"fontSize": "var( --wp--preset--font-size--normal )",
			"letterSpacing": "var( --wp--custom--letter-spacing--body )",
			"lineHeight": "var( --wp--custom--line-height--body )"
		}
	}
}